<h2>Listing tasks</h2>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Duration</th>
      <th>Complete</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for task <- @tasks do %>
    <tr>
      <td><%= task.user_id %></td>
      <td><%= task.title %></td>
      <td><%= task.duration %></td>
      <td><%= task.complete %></td>

      <td class="text-right">
        <%= link "Toggle Complete", to: task_path(@conn, :update, task), class: "btn btn-default btn-xs" %>
        <%= button "Do Today", to: list_path(@conn, :create, DateHelpers.today_readable, tasks: [task.id]), class: "btn btn-default btn-xs" %>
        <%= link "Show", to: task_path(@conn, :show, task), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: task_path(@conn, :edit, task), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: task_path(@conn, :delete, task), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New task", to: task_path(@conn, :new) %>
